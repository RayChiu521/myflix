%section.admin_payments
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %section.payment_history
          = render 'shared/admin_nav'
          %table.table
            %thead
              %tr
                %th Name
                %th Email
                %th Amount
                %th Reference ID
            %tbody
              - @payments.each do |payment|
                %tr
                  %td= payment.user.full_name
                  %td= payment.user.email
                  %td= payment.amount
                  %td= payment.reference_id